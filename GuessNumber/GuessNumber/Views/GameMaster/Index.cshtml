@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Contents/mystyle.css" rel="stylesheet" />
    @*<link href="~/Contents/jquery-ui.css" rel="stylesheet" />*@
    <link href="~/bootstrap.min.css" rel="stylesheet" />
    <link href="~/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.9.0.min.js"></script>    
    @*<script src="~/Scripts/jquery-ui.js"></script>*@
    <script src="~/Scripts/jquery.signalR-1.2.2.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/bootstrap.min.js"></script>
    <script src="~/Scripts/Mathematica.js"></script>
    @*<script src="~/Scripts/CeydateValidatorlesspayload.js"></script>*@    
   
</head>
<body>   
     
    <div class="item active" style="margin-left:120px; margin-top:30px;">
        <div id="myleft" class="item active">
            @*<p>
                    Hello @User.Identity.Name
                </p>*@
            <h2 id="top" class="form-signin-heading" style="text-align:center;">               
    You are welcome <br />
    to the Game Project.<br />
    To start click "Play Game"<br />
            </h2>
            <input type="button" id="play" class="btn btn-lg btn-primary btn-block" value="Play Game" /><br>
            
            
           
            
        </div>

        <div id="diva" style="display:none;">
            <h3 class="form-signin-heading" style="text-align:center;">Enter your Name and Number</h3> <br />
            <input type="text" id="name" class="form-control" name="username" onchange="" placeholder="Enter Name"/><br />
            
            <input type="password" id="number" class="form-control" name="usernumber" placeholder="Enter Secret Number"/><br />
            <p id="errdetail"></p>
            <input type="checkbox" id="tchoice" name="time"/> Timed Game<br />

            <button type="button" id="Enter" class="btn btn-lg btn-primary btn-block" disabled="disabled">Enter</button>
            
        </div>
        <div id="mybody" class="item active" style="display:none;">            
            <div id="userinfo" >
                <h1 id="avail" class="page-header">Pick an Opponent</h1><br />                
            </div>   
            @*<button id="start" class="btn btn-lg btn-primary btn-block">Start</button>*@ 
        </div>
        <div id="console" style="display:none;">
            <div id="table" class="table-responsive">
                <table id ="result" class="table table-striped">                   
                </table>
              
            </div>

            <div id="game">
                
                <input type="text" name="Number" id="numb" placeholder="Enter your guess" /><br />
                <input type="button" class="nmb" id="1" value="1" />
                <input type="button" class="nmb" id="2" value="2" />
                <input type="button" class="nmb" id="3" value="3" />
                <input type="button" class="nmb" id="4" value="4" />
                <input type="button" class="nmb" id="5" value="5" />
                <input type="button" class="nmb" id="6" value="6" />
                <input type="button" class="nmb" id="7" value="7" />
                <input type="button" class="nmb" id="8" value="8" />
                <input type="button" class="nmb" id="9" value="9" />
                <input type="button" class="nmb" id="clear" value="Clear" />
                <input type="button" class="nmb" id="guess" value="Guess" />
                <input type="button" id="pause" value="Pause" />
                <input type="button" id="restart" value="Replay" disabled/> 
                <input type="button" id="end" value="End" />                
                <p id="details"></p>
                <input type="text" name="msg" id="pmsg" placeholder="Type message here...." /><br />
                <input type="button" id="smsg" value="Send" />

            </div>
        </div>
    </div> 
</body>
</html>
